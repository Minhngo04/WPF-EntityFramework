<UserControl x:Class="CandidateManagement_NgoQuangMinh.SidebarHeaderWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CandidateManagement_NgoQuangMinh"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Grid.Row="0" Grid.Column="0" Background="#FFADD8E6">
            <StackPanel>
                <Button x:Name="CandidateProfile" Content="CandidateProfile" Height="33" Width="114" Background="#FF90EE90" Click="CandidateProfile_Click" Margin="5,80,0,0"/>
                <Button x:Name="JobPosting" Content="JobPosting" Height="33" Width="114" Background="#FFFFE4B5" Click="JobPosting_Click" Margin="5,20,0,0"/>
                <Button x:Name="Logout" Content="Logout" Height="33" Width="114" Background="#FFFFE4B5" Click="Logout_Click" Margin="5,20,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
